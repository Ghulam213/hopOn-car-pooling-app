// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CurrentModeEnum {
  DRIVER
  PASSENGER
}

enum GenderEnum {
  MALE
  FEMALE
}

enum VehicleTypeEnum {
  CAR
  BIKE
}

enum RideStatusEnum {
  REQUESTED
  ACCEPTED
  REJECTED
  ON_GOING
  COMPLETED
  CANCELLED
}

enum PasengerRideStatusEnum {
  ACCEPTED
  ON_GOING
  COMPLETED
}

model User {
  id          String          @id @default(uuid())
  coginitoId  String          @unique
  email       String          @unique
  firstName   String
  lastName    String
  password    String
  phone       String          @unique
  locale      String?         @default("en")
  timezone    String?
  currentCity String?
  gender      GenderEnum?
  birthDate   DateTime?
  profilePic  String?
  optedInAt   Boolean         @default(false)
  active      Boolean         @default(false)
  verified    Boolean         @default(false)
  currentMode CurrentModeEnum
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  driver      Driver?
  passenger   Passenger?
  device      Device?
}

model Driver {
  id           String    @id @default(uuid())
  cnicFront    String
  cnicBack     String
  licenseFront String
  licenseBack  String
  user         User      @relation(fields: [userId], references: [id])
  userId       String    @unique
  vehicles     Vehicle[]
  verified     Boolean   @default(false)
  active       Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  rides        Ride[]
}

model Vehicle {
  id              String          @id @default(uuid())
  vehicleType     VehicleTypeEnum
  vehicleBrand    String
  vehicleModel    String
  vehicleColor    String
  vehiclePhoto    String
  vehicleRegImage String
  driver          Driver          @relation(fields: [driverId], references: [id])
  driverId        String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model Passenger {
  id               String             @id @default(uuid())
  user             User               @relation(fields: [userId], references: [id])
  userId           String             @unique
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  passengersOnRide PassengersOnRide[]
}

model Ride {
  id               String             @id @default(uuid())
  driver           Driver             @relation(fields: [driverId], references: [id])
  driverId         String
  source           String
  destination      String
  totalDistance    Float
  totalFare        Float
  rideStatus       RideStatusEnum
  currentLocation  String
  city             String
  rideStartedAt    DateTime?
  rideEndedAt      DateTime?
  polygonPoints    Json
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  passengersOnRide PassengersOnRide[]
}

model PassengersOnRide {
  id            String                 @id @default(uuid())
  ride          Ride                   @relation(fields: [rideId], references: [id])
  rideId        String
  passenger     Passenger              @relation(fields: [passengerId], references: [id])
  passengerId   String
  source        String
  destination   String
  distance      Float
  fare          Float
  rideStatus    PasengerRideStatusEnum
  rideStartedAt DateTime?
  rideEndedAt   DateTime?
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt
}

model Device {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique
  deviceType String
  token      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
